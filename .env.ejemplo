# ==========  CONFIGURACIÓN DE BASE DE DATOS ==========
DB_HOST=localhost
DB_PORT=your_port
DB_NAME=your_database
DB_USERNAME=your_user
DB_PASSWORD=your_password

# ========== CONFIGURACIÓN DE EMAIL SMTP ==========
# Gmail con App Password
EMAIL_USERNAME=your_email
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email

# ========== CONFIGURACIÓN DE DIRECTORIOS ==========
UPLOAD_DIR=uploads # Directory for file uploads

# ========== CONFIGURACIÓN DE EMAILS ADMINISTRATIVOS ==========
ADMIN_EMAILS=your_admin_email,your_support_email
SUPPORT_EMAIL=your_support_email

# ========== CONFIGURACIÓN DE ENTORNO ==========
ENVIRONMENT=development # Options: development, production, testing
DEBUG_MODE=false # Enable or disable debug mode
EMAIL_DEBUG=false # Enable or disable email debug mode

# ========== CONFIGURACIÓN DE LÍMITES ==========
MAX_FILE_SIZE=5MB # Maximum file size for uploads
MAX_REQUEST_SIZE=10MB # Maximum request size for API calls
DAILY_EMAIL_LIMIT=1000 # Maximum number of emails sent per day
HOURLY_EMAIL_LIMIT=100 # Maximum number of emails sent per hour

# ========== CONFIGURACIÓN DE SERVICIOS EXTERNOS ==========
LOGO_URL=your_logo_url

# ========== CONFIGURACIÓN DE TIMEZONE ==========
APP_TIMEZONE=your_timezone

# ========== CONFIGURACIÓN DE DOCUMENTACIÓN ==========
API_DOCS_ENABLED=true # Enable API documentation
SWAGGER_UI_ENABLED=true # Enable Swagger UI
API_VERSION=your_api_version
API_TITLE=your_api_title
API_DESCRIPTION=your_api_description